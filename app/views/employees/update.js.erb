<% if @employee.errors.any? -%>
  $("#flash_notice").hide(300);
  $("#employee_errors").html("<%= escape_javascript(error_messages_for(@employee))%>");
  $("#employee_errors").show(300);
<% else -%>
  $("#employee_errors").hide(300);
  $("#flash_notice").html("<%= escape_javascript(flash[:notice])%>");
  $("#flash_notice").show(300);
  $(":input:not(input[type=submit])").val("");
  $("#employees_list").html("<%= escape_javascript( render(:partial => "employees") ) %>");
<% end -%>